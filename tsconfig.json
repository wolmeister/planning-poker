{
  "compilerOptions": {
    // Basic options
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",

    // Strict checking
    "strict": true,

    // Module resolution options
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Advanced options
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
